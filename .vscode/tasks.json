{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Renode_GPIO_F1",
            "type": "shell",
            "command": "renode",
            "args": [
                "-e", "set bin_path @build/hydrv_gpio/example/HydrvGPIOExample.elf",
                "-e", "set renode_core_path @third_party/renode",
                "-e", "include @renode/f1/gpio_F1.resc"
            ],
            "isBackground": true,
            "problemMatcher": {
                "source": "Renode",
                "pattern": {
                    "regexp": ""
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Renode, version .*",
                    "endsPattern": ".*GDB server with all CPUs started on port.*"
                }
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
    ]
}